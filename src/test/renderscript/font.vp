uniform float4x4 ViewProj   : (c0);
uniform float4 Offset       : (c4);

void main(float4 vertex : ATTR0,
          out float4 oPosition : POSITION,
          out float2 oTexcoord0 : TEXCOORD0)
{
    oPosition = mul(float4(vertex.x + Offset.x, vertex.y + Offset.y, 0, 1), ViewProj);
    oTexcoord0 = vertex.zw;
}
