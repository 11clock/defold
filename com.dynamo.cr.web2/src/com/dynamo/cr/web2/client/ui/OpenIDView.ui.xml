<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .guid {
            font-size: 0.8em;
        }
        .loader {
            margin: 8px;
        }
        .eula {
            width: 960px;
            height: 300px;
            overflow: scroll;
            overflow-x: hidden;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:DeckPanel ui:field="deckPanel" width="100%">

            <g:HTMLPanel>
                <h2>Confirm Registration</h2>
                <div class="form">

                    <div class="formRow">
                        Welcome <g:InlineLabel ui:field="firstNameLabel" text="FIRST"></g:InlineLabel> <g:InlineLabel ui:field="lastNameLabel" text="LAST"></g:InlineLabel> (<i><g:InlineLabel ui:field="emailLabel" text="test@example.com"></g:InlineLabel></i>)
                    </div>

                    <div class="formRow">
                        <g:FlowPanel>
                            <g:Image url="images/ajax-loader.gif" styleName="{style.loader}" ui:field="loader"></g:Image>
                            <g:HTMLPanel ui:field="eula" styleName="{style.eula}">
                            </g:HTMLPanel>
                        </g:FlowPanel>
                    </div>

                    <div class="formRow">
                        <g:Button ui:field="registerButton">Register and Accept Terms</g:Button>
                    </div>
                    <g:HTMLPanel styleName="formRow" ui:field="registrationKeyBox">
                        <div class="formLabel">Registration Key</div>
                        <g:TextBox ui:field="registrationKey" styleName="{style.guid}"/>
                    </g:HTMLPanel>
                </div>
            </g:HTMLPanel>
            <g:HTMLPanel>
                <h2>Login successful</h2>
            </g:HTMLPanel>
        </g:DeckPanel>

    </g:HTMLPanel>
</ui:UiBinder>
