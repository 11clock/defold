<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .guid {
        	font-size: 0.8em;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:DeckPanel ui:field="deckPanel" width="300px">

            <g:HTMLPanel>
                <h2>Confirm Registration</h2>
                <div class="form">

                    <div class="formRow">
                        Welcome <g:InlineLabel ui:field="firstNameLabel" text="FIRST"></g:InlineLabel> <g:InlineLabel ui:field="lastNameLabel" text="LAST"></g:InlineLabel> (<i><g:InlineLabel ui:field="emailLabel" text="test@example.com"></g:InlineLabel></i>)
                    </div>

                    <div class="formRow">
                        Your OpenID is not yet registered here. Do you want to register a new account?
                        Defold is currently in closed beta phase and a beta registration key is required.<br/>
                    </div>

                    <div class="formRow">
                        <div class="formLabel">Registration Key</div>
                        <g:TextBox ui:field="registrationKey" styleName="{style.guid}"/>
                    </div>

                    <div class="formRow">
                        <div class="formLabel">End User Agreement</div>
                        <g:TextArea ui:field="eula" height="100px" text="EULA HERE!" readOnly="true"/>
                    </div>

                    <div class="formRow">
                        <g:Button ui:field="registerButton">Register and Accept Agreement</g:Button>
                    </div>
                </div>
            </g:HTMLPanel>
            <g:HTMLPanel>
                <h2>Login successful</h2>
            </g:HTMLPanel>
        </g:DeckPanel>

    </g:HTMLPanel>
</ui:UiBinder>
