                </g:HTMLPanel>
                <g:HTMLPanel>
                    <div class="text">
                        <h1>2D</h1>
                        <ul class="check usp">
                            <li>Tailored for 2D editing</li>
                            <li>Auto-generated collision from images</li>
                        </ul>
                    </div>
                    <div class="text">
                        <img src="images/2d.png" align="center"/>
                    </div>
                </g:HTMLPanel>
            </g:DeckPanel>
            <g:FlowPanel ui:field="buttonPanel"></g:FlowPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
