<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .recipient {
           width: 17em;
        }
    </ui:style>

    <g:HTMLPanel>
        <h2>Invite a friend!</h2>
        <div class="box boxHighlight">
            <span>You have <span ui:field="invitationCount" style="font-weight: bold;"></span> remaining invitations.</span>
            <g:TextBox ui:field="recipient" addStyleNames="{style.recipient}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
