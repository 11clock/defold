<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .deleteBox {
            position: relative;
            right: 0px;
            top: 0x;
            float: right;
        }

        .deleteX {
            width: 28px;
            height: 28px;
            padding: 0px;
            margin: 0px;
            background-color: #e9eaec;
            color: #444;
            border: 1px solid #98999c;
        }

        .deleteX:hover {
            background-color: #f3f4f9;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="box">
            <div class="{style.deleteBox}">
                <g:Button ui:field="removeMember" addStyleNames="{style.deleteX}">x</g:Button>
            </div>

            <table>
                <tr>
                    <td>
                        <g:Image ui:field="gravatar" url="http://www.gravatar.com/avatar/123?s=64"></g:Image>
                    </td>
                    <td valign="middle" style="padding-left: 10px">
                        <span ui:field="firstName" text="Bob"></span>
                        <span ui:field="lastName" text="Gamer"></span>
                        <span ui:field="youOrMemberOrOwner" text="(You)"></span>
                    </td>
                </tr>
            </table>

        </div>
    </g:HTMLPanel>
</ui:UiBinder>

