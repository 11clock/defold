<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .important {
            font-weight: bold;
        }
    </ui:style>
    <g:HTMLPanel>
        <div style="background-color: #eee; width: 200px; margin: 16px; padding: 16px;">
            <g:Image ui:field="gravatar" url="http://www.gravatar.com/avatar/123?s=64"></g:Image>
            <span ui:field="firstName" text="Bob"></span>
            <span ui:field="lastName" text="Gamer"></span>
	        <span ui:field="youOrMemberOrOwner" text="(You)"></span>
            <g:Button ui:field="removeMember">x</g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>

