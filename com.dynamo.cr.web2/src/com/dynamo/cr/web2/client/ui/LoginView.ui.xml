<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .error {
        	color: red;
            padding-top: 8px;
        	padding-bottom: 8px;
        }
    </ui:style>

	<g:FlowPanel>
        <g:HTMLPanel>
        </g:HTMLPanel>

        <g:HTMLPanel>
            <h2>Login or Register New Account </h2>
            <div class="paragraph">
                Select a site where you already have an account registered:
            </div>

            <g:Button ui:field="loginGoogleButton" text="" styleName="gwt-Button openIDGoogle"></g:Button>

        </g:HTMLPanel>

        <g:Label styleName="{style.error}" text=" " horizontalAlignment="ALIGN_LEFT" ui:field="errorLabel"/>

    </g:FlowPanel>
</ui:UiBinder>
