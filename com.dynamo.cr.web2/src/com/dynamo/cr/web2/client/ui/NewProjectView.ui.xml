<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .panel {

        }

        .error {
        	color: red;
        	padding-top: 8px;
        	padding-bottom: 8px;
        }
    </ui:style>

    <g:FlowPanel styleName="{style.panel}">

        <g:HTMLPanel>
            <h2>New Project</h2>
        </g:HTMLPanel>

        <g:HTMLPanel>
            <div class="form">
                <div class="formRow">
                    <div class="formLabel">Name</div>
                    <div>
                        <g:TextBox ui:field="nameTextBox" />
                    </div>
                        <g:Label styleName="formError" ui:field="nameError">Name is required.</g:Label>
                </div>
                <div class="formRow">
                    <div class="formLabel">Description</div>
                    <div>
                        <g:TextBox ui:field="descriptionTextBox" />
                    </div>
                </div>
                <div class="formRow">
                    <div class="formLabel">Project Template</div>
                    <div>
                        <g:ListBox ui:field="templatesCombo" />
                    </div>
                </div>

                <g:Label styleName="{style.error}" text=" "
                    horizontalAlignment="ALIGN_LEFT" ui:field="errorLabel" />
                <g:Button ui:field='createButton'>Create Project</g:Button>
            </div>
        </g:HTMLPanel>

    </g:FlowPanel>

</ui:UiBinder>
