<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .error {
        	color: red;
            padding-top: 8px;
        	padding-bottom: 8px;
        }
    </ui:style>

	<g:FlowPanel>
        <g:HTMLPanel>
            <h2>Login</h2>
        </g:HTMLPanel>

        <g:Grid>
            <g:row>
                <g:customCell>
                    <g:Label text="Email:"/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox width="200px" ui:field="emailTextBox"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Password:"/>
                </g:customCell>
                <g:customCell>
                    <g:PasswordTextBox width="200px" ui:field="passwordTextBox"/>
                </g:customCell>
            </g:row>
        </g:Grid>
        <g:Label styleName="{style.error}" text=" " horizontalAlignment="ALIGN_LEFT" ui:field="errorLabel"/>
        <g:Button ui:field='loginButton'>Login</g:Button>
    </g:FlowPanel>
</ui:UiBinder>
