<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d="urn:import:com.dynamo.cr.web2.client" xmlns:p2="urn:import:com.dynamo.cr.web2.client.ui">
	<ui:style>
		.dock {
			text-align: left;
			width: 960px;
			margin: 0 auto;
			overflow: auto;
			margin-top: 32px;
		}

		.logoLink {
	       float: left;
	   }

	</ui:style>

    <g:HTMLPanel>
        <g:HTMLPanel styleName="{style.dock}">
            <div id="topBar">
                <g:Hyperlink targetHistoryToken="/"  styleName="{style.logoLink}"><img src="/images/3dlogo.png"/></g:Hyperlink>
                <ul class="nav nav1" style="margin-top: 16px;">
                    <li id="dashboard">
                        <g:Anchor ui:field="dashBoard">Dashboard</g:Anchor>
                    </li>
                    <li id="blog">
                        <g:Anchor ui:field="blog">Blog</g:Anchor>
                    </li>
                    <li id="documentation">
                        <g:Anchor ui:field="documentation">Documentation</g:Anchor>
                    </li>
                </ul>
            </div>

            <g:SimplePanel ui:field="panel"></g:SimplePanel>
        </g:HTMLPanel>

        <div id="defoldFooter">
            <div id="footerContent">

            <table>
            <tr>
                <td>
                <h3>About</h3>
                <ul>
                     <li><a href="">The Company</a></li>
                     <li><p2:EditableLabel value="http://example.com" ui:field="editableLabel" /></li>
                 </ul>
                 </td>

                 <td>
                     <h3>Contact</h3>
                     <ul>
                         <li><a href="http://defold.userecho.com/" target="_blank">Forum</a></li>
                     </ul>
                 </td>

                 <td>
                     <h3>Documentation</h3>
                     <ul>
                     </ul>
                 </td>
             </tr>
           </table>

          </div>
          <div style="margin-top: 120px; margin-right: 16px;">
            <span style="float: right">
                <g:Anchor ui:field="logout">Logout</g:Anchor>
            </span>
        </div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
