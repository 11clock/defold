<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
    xmlns:d="urn:import:com.dynamo.cr.web2.client">
    <ui:style>
        /* Add CSS here. See the GWT docs on UI Binder for more details */
        .important {
        	font-weight: bold;
        }

        .dock {
        	margin: 16px;
        }

        .navigationLink {
        	padding-right: 8px;
        	cursor: pointer;
        }
    </ui:style>

    <g:DockLayoutPanel styleName="{style.dock}" unit='EM'
        width="800px" height="600px">
        <g:north size="5">
            <g:VerticalPanel>
                <g:HTML>
                    <span style="font-size: 24px; margin-bottom: 16px">
                        <b>Defold</b>
                    </span>
                </g:HTML>
                <g:HorizontalPanel>
                    <g:Anchor styleName="{style.navigationLink}"
                        ui:field="productInfo">Product Info</g:Anchor>
                    <g:Anchor styleName="{style.navigationLink}"
                        ui:field="dashBoard">Dashboard</g:Anchor>
                    <g:Anchor styleName="{style.navigationLink}"
                        ui:field="logout">Logout</g:Anchor>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:north>

        <g:center>
            <g:SimplePanel ui:field="panel"></g:SimplePanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
