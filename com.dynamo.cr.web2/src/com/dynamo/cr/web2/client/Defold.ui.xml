<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1="urn:import:com.google.gwt.user.cellview.client" xmlns:d="urn:import:com.dynamo.cr.web2.client">
    <ui:style>
        /* Add CSS here. See the GWT docs on UI Binder for more details */
        .important {
        	font-weight: bold;
        }
    </ui:style>

    <g:DockLayoutPanel unit='EM' width="800px" height="600px">
        <g:north size="4">
            <g:VerticalPanel>
                <g:HTML>
                    <span style="font-size: 24px"><b>Defold</b></span>
                </g:HTML>
                <g:Anchor text="Logout" ui:field="logout" width="121px" height="56px">Bla</g:Anchor>
            </g:VerticalPanel>
        </g:north>

        <g:center>
            <g:DeckPanel ui:field="deckPanel">
            	<d:LoginPanel ui:field="loginPanel"/>

                <g:TabLayoutPanel barHeight="5" barUnit="EM" ui:field="tabPanel">
                	<g:tab>
                        <g:header>Product</g:header>
                        <g:VerticalPanel>
                            <g:HTML>
                                Product info...
                            </g:HTML>
                        </g:VerticalPanel>
                	</g:tab>

                    <g:tab>
                        <g:header>Documentation</g:header>
                        <g:HTML>
                            Docs...
                        </g:HTML>
                    </g:tab>
                    <g:tab>
                    	<g:header>Dashboard</g:header>
                    	<d:Dashboard ui:field="dashboardTab"/>
                    </g:tab>

                </g:TabLayoutPanel>

            </g:DeckPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
