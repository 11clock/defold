<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
    xmlns:d="urn:import:com.dynamo.cr.web2.client" xmlns:p2="urn:import:com.dynamo.cr.web2.client.ui">
    <ui:style>
        .dock {
        	margin-top: 16px;
        	margin-left: auto;
        	margin-right: auto;
        }

        .center {
            margin-left: 8px;
        }
    </ui:style>

    <g:DockLayoutPanel styleName="{style.dock}" unit='EM'
        width="960px">
        <g:north size="7">
            <g:VerticalPanel>
                <g:HTMLPanel>
                    <span style="font-size: 24px; margin-bottom: 16px">
                        <b>Defold</b>
                    </span>

                    <div style="margin-bottom: 4px;">
                        <p2:EditableLabel value="http://example.com" ui:field="editableLabel" />
                    </div>

                </g:HTMLPanel>


                <g:HTMLPanel>
                    <ul class="nav nav1">
                        <li id="product_info"><g:Anchor ui:field="productInfo">Product Info</g:Anchor></li>
                        <li id="dashboard"><g:Anchor ui:field="dashBoard">Dashboard</g:Anchor></li>
                        <li id="documentation"><g:Anchor ui:field="documentation">Documentation</g:Anchor></li>
                        <li id="tutorials"><g:Anchor ui:field="tutorials">Tutorials</g:Anchor></li>
                        <li id="forum"><g:Anchor>Forum</g:Anchor></li>
                        <li id="contact"><g:Anchor>Contact</g:Anchor></li>
                        <li id="about"><g:Anchor>About</g:Anchor></li>
                    </ul>
                </g:HTMLPanel>

            </g:VerticalPanel>
        </g:north>

        <g:center>
            <g:ScrollPanel ui:field="panel" styleName="{style.center}"></g:ScrollPanel>
        </g:center>

        <g:south size="3">
            <g:HTMLPanel>
                <div style="margin-top: 16px;">
                    Â© 2011 Defold All rights reserved
                    <span style="float: right">
                        <g:Anchor ui:field="logout">Logout</g:Anchor>
                    </span>
                </div>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder>
