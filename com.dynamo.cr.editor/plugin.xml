<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.dynamo.cr.editor.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.dynamo.cr.editor.Perspective"
            id="com.dynamo.cr.editor.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.dynamo.cr.editor.application"
            name="Dynamo Editor">
         <property
               name="appName"
               value="Dynamo Editor">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>

   <extension
         point="org.eclipse.core.filesystem.filesystems">
      <filesystem
            scheme="crepo">
         <run
               class="com.dynamo.cr.editor.fs.RepositoryFileSystem">
         </run>
      </filesystem>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="com.dynamo.cr.editorcategory"
            class="com.dynamo.cr.editor.compare.ChangedFilesView"
            icon="icons/database_edit.png"
            id="com.dynamo.crepo.changedfiles"
            name="Changed Files"
            restorable="true">
      </view>
      <category
            id="com.dynamo.cr.editorcategory"
            name="Dynamo Editor">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.dynamo.crepo.toolbar"
               label="Content Repository">
            <command
                  commandId="org.eclipse.ui.file.save"
                  icon="icons/save.png"
                  label="Save"
                  style="push">
            </command>
            <command
                  commandId="com.dynamo.crepo.commands.connect"
                  icon="icons/database_connect.png"
                  label="Connect"
                  style="push">
            </command>
            <command
                  commandId="com.dynamo.crepo.commands.update"
                  icon="icons/database_refresh.png"
                  label="Update"
                  style="push">
            </command>
            <command
                  commandId="com.dynamo.crepo.commands.publish"
                  icon="icons/database_go.png"
                  label="Publish"
                  style="push">
            </command>
            <command
                  commandId="com.dynamo.crepo.commands.launch"
                  icon="icons/play.png"
                  id="com.dynamo.crepo.commands.toolbar.launch"
                  label="Launch"
                  style="pulldown">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:com.dynamo.crepo.commands.toolbar.launch">
         <command
               commandId="com.dynamo.crepo.commands.launch"
               label="Build"
               style="push">
            <parameter
                  name="com.dynamo.crepo.commands.launch.type"
                  value="build">
            </parameter>
         </command>
         <separator
               name="com.dynamo.cr.editor.separator1">
         </separator>
         <command
               commandId="com.dynamo.crepo.commands.launch"
               label="Rebuild"
               style="push">
            <parameter
                  name="com.dynamo.crepo.commands.launch.type"
                  value="rebuild">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:edit">
         <command
               commandId="com.dynamo.crepo.commands.reloadresource"
               label="Reload resource"
               style="push"
               tooltip="Reload resources">
         </command>
         <command
               commandId="org.eclipse.ui.navigate.openResource"
               label="Open resource..."
               style="push"
               tooltip="Open resource">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:file">
         <command
               commandId="com.dynamo.crepo.commands.connect"
               icon="icons/database_connect.png"
               label="Connect"
               style="push">
         </command>
         <command
               commandId="com.dynamo.crepo.commands.update"
               icon="icons/database_refresh.png"
               label="Update"
               style="push">
         </command>
         <command
               commandId="com.dynamo.crepo.commands.publish"
               icon="icons/database_go.png"
               label="Publish"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=edit">
         <menu
               id="com.dynamo.cr.editor.menus.tools"
               label="Tools">
            <menu
                  icon="icons/play.png"
                  id="com.dynamo.cr.editor.menus.launch"
                  label="Launch">
               <command
                     commandId="com.dynamo.crepo.commands.launch"
                     label="Build"
                     style="push">
                  <parameter
                        name="com.dynamo.crepo.commands.launch.type"
                        value="build">
                  </parameter>
               </command>
               <command
                     commandId="com.dynamo.crepo.commands.launch"
                     label="Rebuild"
                     style="push">
                  <parameter
                        name="com.dynamo.crepo.commands.launch.type"
                        value="rebuild">
                  </parameter>
               </command>
            </menu>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Content Repository"
            id="com.dynamo.crepo.category">
      </category>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.editor.handlers.ConnectHandler"
            description="Connect to resource server"
            id="com.dynamo.crepo.commands.connect"
            name="Connect">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.editor.handlers.LaunchHandler"
            description="Launch game"
            id="com.dynamo.crepo.commands.launch"
            name="Launch game">
         <commandParameter
               id="com.dynamo.crepo.commands.launch.type"
               name="com.dynamo.crepo.commands.launch.type"
               optional="true">
         </commandParameter>
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.editor.handlers.PublishHandler"
            description="Publish changes"
            id="com.dynamo.crepo.commands.publish"
            name="Publish changes">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.editor.handlers.UpdateHandler"
            description="Update resources"
            id="com.dynamo.crepo.commands.update"
            name="Update resources">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.editor.handlers.ReloadResourceHandler"
            description="Reload resource"
            id="com.dynamo.crepo.commands.reloadresource"
            name="Reload resource">
      </command>
   </extension>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.dynamo.cr.editor.preferences.PreferencePage"
            id="com.dynamo.rclient.preferences.PreferencePage"
            name="Content Repository">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.dynamo.cr.editor.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         id="com.dynamo.cr.editor.builders.contentbuilder"
         name="Content Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="true">
         <run
               class="com.dynamo.cr.editor.builders.ContentBuilder">
         </run></builder>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.dynamo.crepo.commands.reloadresource"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+R">
      </key>
      <key
            commandId="com.dynamo.crepo.commands.connect"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+O">
      </key>
      <key
            commandId="com.dynamo.crepo.commands.publish"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+Shift+P">
      </key>
      <key
            commandId="com.dynamo.crepo.commands.update"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+U">
      </key>
      <key
            commandId="com.dynamo.crepo.commands.launch"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+T">
         <parameter
               id="com.dynamo.crepo.commands.launch.type"
               value="build">
         </parameter>
      </key>
      <key
            commandId="com.dynamo.crepo.commands.launch"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+Shift+T">
         <parameter
               id="com.dynamo.crepo.commands.launch.type"
               value="rebuild">
         </parameter>
      </key>
   </extension>
   <extension
         id="com.dynamo.cr.newwizards"
         name="Content"
         point="org.eclipse.ui.newWizards">
      <category
            id="com.dynamo.cr.editor.wizardCategory"
            name="Content">
      </category>
   </extension>
   <extension
         point="com.dynamo.cr.resourcetypes">
      <resource-type
            embeddable="false"
            file-extension="png"
            id="com.dynamo.cr.editor.resourcetypes.png"
            name="PNG"
            type-class="image">
      </resource-type>
   </extension>
   <extension
         point="org.eclipse.ui.activities">
      <activity
            description="Disable unwanted eclipse UI"
            id="com.dynamo.cr.editor.activities.disableEclipseUI"
            name="Disable">
      </activity>
      <activityPatternBinding
            activityId="com.dynamo.cr.editor.activities.disableEclipseUI"
            pattern="org\.eclipse\.ui\.ide/org\.eclipse\.ui\.wizards\.new\.project">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.dynamo.cr.editor.activities.disableEclipseUI"
            pattern="org\.eclipse\.ui\.ide/org\.eclipse\.ui\.wizards\.new\.file">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.dynamo.cr.editor.activities.disableEclipseUI"
            pattern="org\.eclipse\.ui\.ide/org\.eclipse\.ui\.wizards\.new\.folder">
      </activityPatternBinding>
      <activityPatternBinding
            activityId="com.dynamo.cr.editor.activities.disableEclipseUI"
            pattern="org\.eclipse\.ui\.editors/org\.eclipse\.ui\.editors\.wizards\.UntitledTextFileWizard">
      </activityPatternBinding>
   </extension>

</plugin>
