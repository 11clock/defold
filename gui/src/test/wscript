import Task, TaskGen
from TaskGen import extension, declare_extension

def build(bld):
    test_gui = bld.new_task_gen(features = 'cxx cprogram embed',
                                includes = '../../../src .',
                                uselib = 'GTEST SCRIPT DLIB PLATFORM_SOCKET LUA',
                                uselib_local = 'gui',
                                target = 'test_gui',
                                source = 'test_gui.cpp test_gui_ddf.proto',
                                embed_source = 'bug352.lua')

    test_gui.install_path = None

    guidemo = bld.new_task_gen(features = 'cxx cprogram',
                               includes = '../../../src',
                               uselib = 'SCRIPT DLIB PLATFORM_SOCKET LUA DMGLFW',
                               uselib_local = 'gui',
                               target = 'guidemo',
                               source = 'guidemo.cpp')

    guidemo.install_path = None