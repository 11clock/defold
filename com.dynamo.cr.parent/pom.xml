<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.dynamo.cr</groupId>
    <artifactId>parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>com.dynamo.cr.parent</name>

    <repositories>
        <repository>
            <id>helios</id>
            <layout>p2</layout>
            <url>http://download.eclipse.org/releases/helios</url>
        </repository>

        <!--
        We currently don't want the latest version. Had some problems with 2.2.0 (api changes)
        We use a released version from release/helios instead. See above
        <repository>
            <id>eclipselink</id>
            <layout>p2</layout>
            <url>http://download.eclipse.org/rt/eclipselink/updates/</url>
        </repository> -->

    </repositories>

    <properties>
        <tycho-version>0.10.0</tycho-version>
        <tycho-groupid>org.sonatype.tycho</tycho-groupid>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.sonatype.tycho</groupId>
                <artifactId>tycho-maven-plugin</artifactId>
                <version>${tycho-version}</version>
                <extensions>true</extensions>
            </plugin>
            <plugin>
                <groupId>org.sonatype.tycho</groupId>
                <artifactId>maven-osgi-compiler-plugin</artifactId>
                <version>${tycho-version}</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.sonatype.tycho</groupId>
                <artifactId>target-platform-configuration</artifactId>
                <version>${tycho-version}</version>
                <configuration>
                    <resolver>p2</resolver>
                    <!-- <ignoreTychoRepositories>true</ignoreTychoRepositories> -->
                    <environments>
                        <environment>
                            <os>win32</os>
                            <ws>win32</ws>
                            <arch>x86</arch>
                        </environment>
                        <environment>
                            <os>macosx</os>
                            <ws>cocoa</ws>
                            <arch>x86_64</arch>
                        </environment>
                        <environment>
                            <os>linux</os>
                            <ws>gtk</ws>
                            <arch>x86</arch>
                        </environment>
                    </environments>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>../org.mockito</module>
        <module>../com.google.common</module>
        <module>../com.dynamo.cr.common</module>
        <module>../com.dynamo.cr.common.test</module>
        <module>../com.dynamo.cr.editor</module>
        <module>../com.dynamo.cr.editor.core</module>
        <module>../com.dynamo.cr.editor.fs</module>
        <module>../com.dynamo.cr.editor.fs.test</module>
        <module>../com.dynamo.cr.scene</module>
        <module>../com.dynamo.cr.scene.test</module>
        <module>../com.dynamo.cr.contenteditor</module>
        <module>../com.dynamo.cr.luaeditor</module>
        <module>../com.dynamo.cr.luaeditor.test</module>
        <module>../com.dynamo.cr.cgeditor</module>
        <module>../com.dynamo.cr.ddfeditor</module>
        <module>../com.dynamo.cr.ddfeditor.test</module>
        <module>../com.dynamo.cr.protobind</module>
        <module>../com.dynamo.cr.protobind.test</module>
        <module>../com.dynamo.cr.integrationtest</module>
        <module>../com.dynamo.cr.server</module>
        <module>../com.dynamo.cr.server.test</module>
        <module>../com.dynamo.cr.client</module>
        <module>../com.dynamo.cr.client.test</module>
        <module>../com.dynamo.cr.guieditor</module>
        <module>../com.dynamo.cr.guieditor.test</module>
        <module>../com.dynamo.cr.properties</module>
        <module>../com.dynamo.cr.properties.test</module>
        <module>../javax.media.opengl</module>
    </modules>

</project>
