<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.dynamo.cr.contenteditor.editors.CollectionEditor"
            default="false"
            extensions="collection"
            icon="icons/bricks.png"
            id="com.dynamo.cr.contenteditor.editors.CollectionEditor"
            name="Collection Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.contenteditor.commands.SelectMoveTool"
            description="Select Move Tool"
            id="com.dynamo.cr.contenteditor.commands.selectmovetool"
            name="Select Move Tool">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.contenteditor.commands.SelectRotateTool"
            description="Select Rotate Tool"
            id="com.dynamo.cr.contenteditor.commands.selectrotatetool"
            name="Select Rotate Tool">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.contenteditor.commands.Parent"
            description="Parent objects"
            id="com.dynamo.cr.contenteditor.commands.parent"
            name="Parent objects">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.contenteditor.commands.Unparent"
            description="Unparent objects"
            id="com.dynamo.cr.contenteditor.commands.unparent"
            name="Unparent objects">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.contenteditor.commands.AddGameObject"
            description="Add GameObject"
            id="com.dynamo.cr.contenteditor.commands.addgameobject"
            name="Add GameObject">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.contenteditor.commands.AddSubCollection"
            description="Add Subcollection"
            id="com.dynamo.cr.contenteditor.commands.addsubcollection"
            name="Add Subcollection">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.contenteditor.commands.Delete"
            description="Delete"
            id="com.dynamo.cr.contenteditor.commands.delete"
            name="Delete">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.contenteditor.commands.Copy"
            description="Copy"
            id="com.dynamo.cr.contenteditor.commands.copy"
            name="Copy">
      </command>
      <command
            categoryId="com.dynamo.crepo.category"
            defaultHandler="com.dynamo.cr.contenteditor.commands.Paste"
            description="Paste"
            id="com.dynamo.cr.contenteditor.commands.paste"
            name="Paste">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=edit">
         <menu
               label="Tools">
            <command
                  commandId="com.dynamo.cr.contenteditor.commands.selectmovetool"
                  icon="icons/move.png"
                  label="Move"
                  style="push">
            </command>
            <command
                  commandId="com.dynamo.cr.contenteditor.commands.selectrotatetool"
                  icon="icons/rotate_cw.png"
                  label="Rotate"
                  style="push">
            </command>
            <command
                  commandId="com.dynamo.cr.contenteditor.commands.parent"
                  icon="icons/bricks.png"
                  label="Parent"
                  style="push">
            </command>
            <command
                  commandId="com.dynamo.cr.contenteditor.commands.unparent"
                  icon="icons/brick.png"
                  label="Unparent"
                  style="push">
            </command>
            <command
                  commandId="com.dynamo.cr.contenteditor.commands.addgameobject"
                  icon="icons/add_att_16x16.gif"
                  label="Add GameObject"
                  style="push">
            </command>
            <command
                  commandId="com.dynamo.cr.contenteditor.commands.addsubcollection"
                  icon="icons/add_att_16x16.gif"
                  label="Add Subcollection"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.dynamo.cr.contenteditor.commands.selectmovetool"
            contextId="com.dynamo.cr.contenteditor.contexts.collectioneditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Q">
      </key>
      <key
            commandId="com.dynamo.cr.contenteditor.commands.selectrotatetool"
            contextId="com.dynamo.cr.contenteditor.contexts.collectioneditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="W">
      </key>
      <key
            commandId="com.dynamo.cr.contenteditor.commands.parent"
            contextId="com.dynamo.cr.contenteditor.contexts.collectioneditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="P">
      </key>
      <key
            commandId="com.dynamo.cr.contenteditor.commands.unparent"
            contextId="com.dynamo.cr.contenteditor.contexts.collectioneditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="U">
      </key>
      <key
            commandId="com.dynamo.cr.contenteditor.commands.addgameobject"
            contextId="com.dynamo.cr.contenteditor.contexts.collectioneditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="I">
      </key>
      <key
            commandId="com.dynamo.cr.contenteditor.commands.addsubcollection"
            contextId="com.dynamo.cr.contenteditor.contexts.collectioneditor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="O">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="com.dynamo.cr.contenteditor.contexts.collectioneditor"
            name="Collection Editor">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.dynamo.cr.contenteditor.commands.Delete"
            commandId="org.eclipse.ui.edit.delete">
      </handler>
      <handler
            class="com.dynamo.cr.contenteditor.commands.Copy"
            commandId="org.eclipse.ui.edit.copy">
         <activeWhen>
            <with
                  variable="activePartId">
               <or>
                  <equals
                        value="org.eclipse.ui.views.ContentOutline">
                  </equals>
                  <equals
                        value="com.dynamo.cr.contenteditor.editors.CollectionEditor">
                  </equals>
               </or>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="com.dynamo.cr.contenteditor.commands.Paste"
            commandId="org.eclipse.ui.edit.paste">
         <activeWhen>
            <with
                  variable="activePartId">
               <or>
                  <equals
                        value="org.eclipse.ui.views.ContentOutline">
                  </equals>
                  <equals
                        value="com.dynamo.cr.contenteditor.editors.CollectionEditor">
                  </equals></or>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="com.dynamo.cr.editorcategory"
            class="com.dynamo.cr.contenteditor.views.PropertiesView"
            icon="icons/prop_ps.gif"
            id="com.dynamo.cr.contenteditor.views.PropertiesView"
            name="Properties">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.dynamo.cr.editor.perspective">
         <view
               closeable="false"
               id="com.dynamo.cr.contenteditor.views.PropertiesView"
               moveable="true"
               ratio="0.65"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="com.dynamo.cr.resourcetypes">
      <resource-type
            embeddable="false"
            file-extension="go"
            id="com.dynamo.cr.contenteditor.resourcetypes.GameObject"
            name="Game Object"
            proto-message-class="com.dynamo.gameobject.proto.GameObject$PrototypeDesc"
            resource-refactor-participant-class="com.dynamo.cr.contenteditor.refactoring.GameObjectRefactorParticipant"
            type-class="gameobject">
         <references>
            <reference-type-class
                  type-class="component">
            </reference-type-class>
         </references>
      </resource-type>
   </extension>

</plugin>
