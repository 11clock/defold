<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." name="com.dynamo.cr.server">
    <property environment="env"/>
    <property name="ECLIPSE_HOME" value="../../../../../Applications/eclipse_helios_rcp"/>
    <property name="junit.output.dir" value="junit"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <path id="Plug-in Dependencies.libraryclasspath">
        <pathelement location="@dot"/>
        <pathelement location="${ECLIPSE_HOME}/plugins/org.junit_4.8.1.v4_8_1_v20100427-1100/junit.jar"/>
        <pathelement location="${ECLIPSE_HOME}/plugins/org.hamcrest.core_1.1.0.v20090501071000.jar"/>
        <pathelement location="${ECLIPSE_HOME}/plugins/org.eclipse.osgi_3.6.1.R36x_v20100806.jar"/>
    </path>
    <path id="JUnit 4.libraryclasspath">
        <pathelement location="${ECLIPSE_HOME}/plugins/org.junit_4.8.1.v4_8_1_v20100427-1100/junit.jar"/>
        <pathelement location="${ECLIPSE_HOME}/plugins/org.hamcrest.core_1.1.0.v20090501071000.jar"/>
    </path>
    <path id="com.dynamo.cr.server.classpath">
        <pathelement location="ext/asm-3.1.jar"/>
        <pathelement location="ext/grizzly-servlet-webserver-1.9.18-k.jar"/>
        <pathelement location="ext/jersey-client-1.3-sources.jar"/>
        <pathelement location="ext/jersey-client-1.3.jar"/>
        <pathelement location="ext/jersey-core-1.3.jar"/>
        <pathelement location="ext/jersey-server-1.3.jar"/>
        <pathelement location="ext/jsr250-api-1.0.jar"/>
        <pathelement location="ext/jsr311-api-1.1.1.jar"/>
        <path refid="Plug-in Dependencies.libraryclasspath"/>
        <pathelement location="bin"/>
        <path refid="JUnit 4.libraryclasspath"/>
    </path>
    <target name="GitTest">
        <mkdir dir="${junit.output.dir}"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <test name="com.dynamo.server.git.test.GitTest" todir="${junit.output.dir}"/>
            <classpath refid="com.dynamo.cr.server.classpath"/>
        </junit>
    </target>
    <target name="junitreport">
        <junitreport todir="${junit.output.dir}">
            <fileset dir="${junit.output.dir}">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="noframes" todir="${junit.output.dir}"/>
        </junitreport>
    </target>
</project>
