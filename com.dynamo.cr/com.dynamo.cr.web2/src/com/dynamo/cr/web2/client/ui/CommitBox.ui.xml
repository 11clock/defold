<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    </ui:style>

    <g:HTMLPanel>
        <div class="box" style="width: 300px;">
            <table>
                <tr>
                    <td>
                        <g:Image ui:field="gravatar" url="http://www.gravatar.com/avatar/123?s=32"></g:Image>
                    </td>
                    <td valign="middle">
                        <div style="padding-left: 10px">
                            <span ui:field="name" text="Bob Gamer"></span> at
                            <span ui:field="date" text="18:52"></span>
                        </div>
                    </td>
                </tr>
            </table>
            <span ui:field="message" text="Fixed stuff"></span>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>

