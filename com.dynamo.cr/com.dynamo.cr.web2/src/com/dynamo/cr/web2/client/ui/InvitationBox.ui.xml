<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .recipient {
           width: 17em;
        }
    </ui:style>

    <g:HTMLPanel>
        <div>You have <span ui:field="invitationCount" style="font-weight: bold;"></span> remaining invitations.</div>
        <p></p>
        <g:TextBox ui:field="recipient" addStyleNames="{style.recipient}"/>
    </g:HTMLPanel>
</ui:UiBinder>
