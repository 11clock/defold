<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .recipient {
           width: 17em;
        }
    </ui:style>

    <g:HTMLPanel>
        <h2>Plan</h2>
        <div class="box boxHighlight">
            <span>Your plan defines how many people you can work with in each project.</span>
            <table style="width: 100%;">
                <tr>
                    <td ui:field="productName" style="font-weight: bold; vertical-align: middle;">Unnamed</td>
                    <td ui:field="fee" style="vertical-align: middle;">$1</td>
                    <td ui:field="maxMemberCount" style="vertical-align: middle;">Some</td>
                    <td style="horizontal-align: right; vertical-align: middle;"><g:Button ui:field="editSubscriptionButton">Edit</g:Button></td>
                </tr>
            </table>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
