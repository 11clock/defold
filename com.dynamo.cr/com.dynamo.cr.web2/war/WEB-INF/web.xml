<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<welcome-file-list>
        <!--  Do not add index.html as it would conflict with
              the StaticServlet. We add welcome-files here for simplified
              urls, /plans instead of /plans.html. We could of course modifiy and use the
              StaticServlet instead
        -->
		<welcome-file>landing.html</welcome-file>
        <welcome-file>plans.html</welcome-file>
	</welcome-file-list>

    <servlet>
        <servlet-name>static</servlet-name>
        <servlet-class>com.dynamo.cr.web2.server.StaticServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>static</servlet-name>
        <url-pattern>/doc/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>static</servlet-name>
        <url-pattern>/about/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>static</servlet-name>
        <url-pattern>/blog/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>static</servlet-name>
        <url-pattern>/ref/*</url-pattern>
    </servlet-mapping>

    <error-page>
       <error-code>404</error-code>
       <location>/error/404.html</location>
    </error-page>

    <error-page>
       <error-code>500</error-code>
       <location>/error/500.html</location>
    </error-page>

	<mime-mapping>
		<extension>mp4</extension>
		<mime-type>video/mp4</mime-type>
	</mime-mapping>

</web-app>

