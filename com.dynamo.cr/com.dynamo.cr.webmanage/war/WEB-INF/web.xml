<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
	   <servlet-name>send-news-mail</servlet-name>
	   <servlet-class>com.dynamo.cr.webmanage.SendNewsMail</servlet-class>
	</servlet>

    <servlet>
       <servlet-name>send-news-mail-task</servlet-name>
       <servlet-class>com.dynamo.cr.webmanage.SendNewsMailTask</servlet-class>
    </servlet>

	<servlet-mapping>
	   <servlet-name>send-news-mail</servlet-name>
	   <url-pattern>/send-news-mail</url-pattern>
	</servlet-mapping>

    <servlet-mapping>
       <servlet-name>send-news-mail-task</servlet-name>
       <url-pattern>/send-news-mail-task</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
