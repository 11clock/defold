<project default="compile">
	<property environment="env"/>

    <target name="clean">
        <delete dir="generated"/>
    </target>

    <target name="compile">

    	<copy file="${env.DYNAMO_HOME}/ext/share/java/protobuf-java-2.3.0.jar" todir="war/WEB-INF/lib"/>

        <mkdir dir="generated"/>
        <exec executable="protoc" failonerror="true">
            <arg value="--java_out=generated"/>
            <arg value="-I../com.dynamo.cr.rlog/proto"/>
            <arg value="../com.dynamo.cr.rlog/proto/rlog_ddf.proto"/>
        </exec>
    </target>
</project>
